<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@drawable/background">
	
	<LinearLayout 
	    android:gravity="center" 
	    android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		 >
	    
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	    	android:layout_marginBottom="10dip"
			android:textAppearance="@style/HeaderText"
	    	android:background="#000000"
	        android:gravity="center"
	        android:text="@string/introduction" 
	        android:layout_gravity="center_horizontal"/>
		
	    <ImageView
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/widget" android:scaleType="fitXY"
			android:layout_margin="8dip"
			/>
	    
		<TextView 
		    android:gravity="left"
			android:layout_marginLeft="8dip" 
			android:layout_marginRight="8dip"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:autoLink="all" 
			android:text="@string/AboutUs_Content"
			android:inputType="textMultiLine"/>
		<!--<ImageView
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:src="@drawable/menu_partial" android:scaleType="fitXY"
			android:layout_margin="8dip"
			/>
		<ImageView
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:src="@drawable/preview_partial" android:scaleType="fitXY"
			android:layout_margin="8dip"
			/>-->
		<TextView android:id="@+id/versionText"
			android:layout_marginLeft="8dip" android:layout_marginRight="8dip" android:layout_marginBottom="10dip"
			android:layout_width="fill_parent" android:layout_height="wrap_content"/>
		
		<Button 
		    android:layout_height="wrap_content" 
		    android:id="@+id/ButtonBack"
			android:layout_width="wrap_content"
			android:layout_marginLeft="50dip" 
			android:layout_marginRight="50dip" 
			android:layout_marginBottom="10dip"
			android:layout_marginTop="5dip"
			android:background="@drawable/exit1"
			/>
		
	</LinearLayout>
	
</ScrollView>
